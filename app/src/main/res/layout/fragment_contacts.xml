<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white_smoke"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".LauncherActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row16"
        android:background="@color/roolet_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/groupMembersRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/row01"
        android:layout_marginBottom="@dimen/row0025"
        app:layout_constraintBottom_toTopOf="@id/filterFrameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/groupNameEditText"
        tools:itemCount="2"
        tools:listitem="@layout/selected_contact_list_item" />

    <ImageView
        android:id="@+id/backImageView"
        android:layout_width="@dimen/row04"
        android:layout_height="@dimen/row04"
        android:layout_marginStart="@dimen/row02"
        android:layout_marginTop="@dimen/row02"
        android:contentDescription="@null"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/groupNameEditText"
        android:layout_width="0dp"
        android:layout_height="@dimen/row04"
        android:layout_marginStart="@dimen/row04"
        android:layout_marginEnd="@dimen/row04"
        android:autofillHints="@null"
        android:background="@drawable/white_borders_off_white_bg_rounded"
        android:focusable="true"
        android:fontFamily="serif"
        android:gravity="center"
        android:hint="@string/party_name"
        android:inputType="text"
        android:textColor="@color/white"
        android:textSize="@dimen/caption6"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/saveGroupTextView"
        app:layout_constraintEnd_toStartOf="@id/saveGroupTextView"
        app:layout_constraintStart_toEndOf="@id/backImageView"
        app:layout_constraintTop_toTopOf="@id/saveGroupTextView" />

    <TextView
        android:id="@+id/saveGroupTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/row04"
        android:layout_marginTop="@dimen/row02"
        android:layout_marginEnd="@dimen/row02"
        android:contentDescription="@null"
        android:gravity="center"
        android:src="@drawable/ic_outline_group_add_24"
        android:text="@string/save"
        android:textColor="@color/white_100"
        android:textSize="@dimen/caption7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/filterFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row06"
        android:animateLayoutChanges="true"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <EditText
            android:id="@+id/filterEditText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/row01"
            android:layout_weight="1"
            android:autofillHints="@null"
            android:background="@drawable/rounded_bg"
            android:drawableStart="@drawable/ic_baseline_search_24"
            android:drawablePadding="@dimen/row01"
            android:focusable="true"
            android:hint="@string/search_contacts"
            android:inputType="text"
            android:paddingStart="@dimen/row01"
            android:paddingEnd="@dimen/row01"
            android:textColor="@color/black"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/cancelTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/row01"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/black_70"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/contactsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterFrameLayout"
        tools:listitem="@layout/contact_list_item" />

    <ProgressBar
        android:id="@+id/progressSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <TextView
        android:id="@+id/instructionsTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/row04"
        android:layout_marginEnd="@dimen/row04"
        android:gravity="center"
        android:textSize="@dimen/caption10"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        tools:text="Instructions"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
